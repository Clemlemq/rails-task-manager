<div class="m-5 w-30">
  <div class="row align-items-center d-flex justify-content-between"><h2><%= @task.title %></h2>
    <div class="p-2 border"><%= link_to "Edit this task", edit_task_path %>
    </div>
  </div>
  <p class="alert alert-warning" role="alert"><%= @task.details %></p>
  <p>
    <% if @task.completed %>
     <i class="fa fa-check-square-o">This task is done !</i>
         <% else %>
          <i class="fa fa-square-o">This task is not done !</i>
          <p class="border-bottom "></p>
       <% end %>
  </p>
  <%= link_to "Back to list", tasks_path %>
</div>
