<div class="m-5 container">
  <h1>Edit Task</h1>

  <%= form_for(@task) do |f| %>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.label :details %>
      <%= f.text_field :details %>
    </div>
    <%= f.check_box :completed %><p>Completed</p>

    <%= f.submit %>

  <% end %>
  <p class="border-bottom "></p>

  <%= link_to "Back to list", tasks_path %>
</div>
